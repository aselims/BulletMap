var mongo = require('mongodb');

var Server = mongo.Server,
    Db = mongo.Db,
    BSON = mongo.BSONPure;

var DbName = 'bulletsDb';

var server = new Server('localhost', 27017, {auto_reconnect: true});
db = new Db(DbName, server, {safe: true});


exports.findAll = function(req, res) {
    db.collection('bullets', function(err, collection) {
        collection.find().toArray(function(err, items) {
            res.send(items);
        });
    });
};

exports.findOnebullet = function(req, res){
    var id = req.params.id;
    db.collection('bullets', function(err, collection){
        collection.findOne({'_id':new BSON.ObjectID(id)}, function(err, item) {
            res.send(item);
        });
    });

};

exports.addOnebullet = function(req, res){
    var bullet = req.body;
    console.log("Inserting bullet: " + JSON.stringify(bullet));
    db.collection('bullets', function(err, collection) {
        //collection.insert(docs[[, options], callback])
        collection.insert(bullet, true, function(err, collection){
            collection.msg = 'success'
            res.send(collection);
            console.log("inserted:" + JSON.stringify(bullet));
        });
    });
}

exports.updatebullet = function(req, res) {
    var id = req.params.id;
    var bullet = req.body;
    delete bullet._id;
    console.log('Updating bullet: ' + id);
    console.log(JSON.stringify(bullet));
    db.collection('bullets', function(err, collection) {
        collection.update({'_id':new BSON.ObjectID(id)}, bullet, {safe:true}, function(err, result) {
            if (err) {
                console.log('Error updating bullet: ' + err);
                res.send({'error':'An error has occurred'});
            } else {
                console.log('' + result + ' document(s) updated');
                result.msg = 'success';
                console.log(JSON.stringify(result))
                res.send(result);
            }
        });
    });
}

exports.deletebullet = function(req, res) {
    var id = req.params.id;
    console.log('Deleting bullet: ' + id);
    db.collection('bullets', function(err, collection) {
        collection.remove({'_id':new BSON.ObjectID(id)}, {safe:true}, function(err, result) {
            if (err) {
                res.send({'error':'An error has occurred - ' + err});
            } else {
                console.log('' + result + ' document(s) deleted');
                result.msg = 'success';
                console.log(JSON.stringify(result))
                res.send(result);
                
            }
        });
    });
}


/*--------------------------------------------------------------------------------------------------------------------*/
// Populate database with sample data -- Only used once: the first time the application is started.
// You'd typically not find this code in a real-life app, since the database would already exist.
var populateDB = function() {

    var bullets = [
        {
        "WID" : "12345"
    "weapon": "Deadly",
    "manufacturer": "Empire",
    "countryOfOrigin": "Underground"
},
        {
        "WID" : "12346"
    "weapon": "Deadly",
    "manufacturer": "Empire",
    "countryOfOrigin": "Underground"
}
               
   ];

    db.collection('bullets', function(err, collection) {
        collection.insert(bullets, {safe:true}, function(err, result) {});
    });

};


